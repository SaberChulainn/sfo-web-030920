<h1>Create a new pizza</h1>

<%= form_for @pizza do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :cost %>
	<%= f.number_field :cost %>

	<%= f.label :size %>
	<%= f.text_field :size %>

	<%= f.submit %>
<% end %>

