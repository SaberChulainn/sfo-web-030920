<%= form_for @post do |f|%>
  <% if @post.errors.any?%>
    <ul>
      <% @post.errors.full_messages.each do |message|%>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :content%>
  <%= f.text_area :content%>
  <br>
  <hr>
  <h4>Select existing destination</h4>
  
  <%= f.collection_select :destination_id, @destinations, :id, :name%>
  <h4>Select existing bloggers</h4>
  <%= f.collection_select :blogger_id, @bloggers, :id, :name%>
  <%= f.submit 'Create post'%>
<% end %>