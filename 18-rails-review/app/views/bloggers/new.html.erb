<h1>New Blogger</h1>

<ul>
    <% if @blogger.errors.any? %>
        <% @blogger.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    <% end %>
</ul>

<%= form_for @blogger do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :age %>
    <%= f.number_field :age %>

    <%= f.label :bio %>
    <%= f.text_area :bio%>

    <%= f.submit %>
<% end %>